<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bmenu_h"
    android:background="@color/colorPrimaryDark">


    <LinearLayout
        android:id="@+id/titleLLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/mTen">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/titleLimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/wo"
            app:civ_border_color="@color/colorPrimaryTM"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">


        <TextView
            android:id="@+id/titleContText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimaryBS"
            android:textSize="@dimen/titleTextSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/titleRLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/mTen">

        <ImageView
            android:id="@+id/titleRgeisicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shousuo" />
    </LinearLayout>
</LinearLayout>