<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarySHse"
    android:orientation="vertical"
    android:paddingTop="@dimen/mW">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryBS"
        android:orientation="horizontal"
        android:padding="@dimen/mTen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游戏评分"
                android:textColor="@color/colorPrimaryHS"
                android:textSize="@dimen/homeoneitemTextSize" />

            <TextView
                android:id="@+id/fplfenshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m2Ten"
                android:text="6.7"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/tabplTextSize"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/mTen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/colorPrimaryTXTHse"
                    android:textSize="@dimen/homeoneitemUserTextSize"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mW"
                    android:paddingRight="@dimen/mW"
                    android:src="@mipmap/star1" />

                <ProgressBar
                    android:id="@+id/progressBar5"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/my_barw" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/colorPrimaryTXTHse"
                    android:textSize="@dimen/homeoneitemUserTextSize"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mW"
                    android:paddingRight="@dimen/mW"
                    android:src="@mipmap/star1" />

                <ProgressBar
                    android:id="@+id/progressBar4"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/my_bars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/colorPrimaryTXTHse"
                    android:textSize="@dimen/homeoneitemUserTextSize"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mW"
                    android:paddingRight="@dimen/mW"
                    android:src="@mipmap/star1" />

                <ProgressBar
                    android:id="@+id/progressBar3"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="40"
                    android:progressDrawable="@drawable/my_barsan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorPrimaryTXTHse"
                    android:textSize="@dimen/homeoneitemUserTextSize"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mW"
                    android:paddingRight="@dimen/mW"
                    android:src="@mipmap/star1" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="33"
                    android:progressDrawable="@drawable/my_barr" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorPrimaryTXTHse"
                    android:textSize="@dimen/homeoneitemUserTextSize"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/mW"
                    android:paddingRight="@dimen/mW"
                    android:src="@mipmap/star1" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:max="100"
                    android:progress="4"
                    android:progressDrawable="@drawable/my_bary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fpllayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mW"
        android:background="@color/colorPrimaryBS"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/m2Ten">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_tabplimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/csbitmap"
            app:civ_border_color="@color/colorPrimaryTM"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/usernamepl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mTen"
            android:text="SB熊"
            android:textColor="@color/colorPrimaryHS"
            android:textSize="@dimen/titleTextSize" />

        <com.game.wanq.uu.view.whget.PLRatingBarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/plfenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/mTen"
            app:starCounts="5"
            app:starEmptys="@mipmap/xin"
            app:starFills="@mipmap/xin2"
            app:starImageSizes="70px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:background="@color/colorPrimaryBS"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/m2Ten"
        android:paddingLeft="@dimen/mTen"
        android:paddingRight="@dimen/mTen"
        android:paddingTop="@dimen/m2Ten">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/biaoqian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mW"
                android:text="用户评价"
                android:textColor="@color/colorPrimaryHS" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPxu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/m2Ten"
                android:drawableRight="@mipmap/xiajianjiao"
                android:text="排序"
                android:textColor="@color/colorPrimaryTXTHse" />

            <TextView
                android:id="@+id/textSxuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mW"
                android:drawableRight="@mipmap/xiajianjiao"
                android:text="筛选"
                android:textColor="@color/colorPrimaryTXTHse" />
        </LinearLayout>
    </RelativeLayout>

    <com.game.wanq.uu.view.whget.MyListView
        android:id="@+id/tabplListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimaryBS"
        android:paddingTop="@dimen/mTen" />

</LinearLayout>
