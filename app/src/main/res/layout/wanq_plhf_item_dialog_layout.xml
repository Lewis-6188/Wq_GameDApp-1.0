<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/mW">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:padding="@dimen/mW">

        <Button
            android:id="@+id/diahuof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryBS"
            android:gravity="center"
            android:text="回复"
            android:textColor="@color/colorPrimaryTXTHse"
            android:textSize="@dimen/homeoneitemTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimarySHse" />

        <Button
            android:id="@+id/diacheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryBS"
            android:gravity="center"
            android:text="沉"
            android:textColor="@color/colorPrimaryTXTHse"
            android:textSize="@dimen/homeoneitemTextSize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimarySHse" />

        <Button
            android:id="@+id/diatshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryBS"
            android:gravity="center"
            android:text="投诉"
            android:textColor="@color/colorPrimaryTXTHse"
            android:textSize="@dimen/homeoneitemTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mTen"
        android:background="@drawable/dialog_background"
        android:padding="@dimen/mW">

        <Button
            android:id="@+id/diaquxiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryBS"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorPrimaryTXTHse"
            android:textSize="@dimen/homeoneitemTextSize" />
    </LinearLayout>


</LinearLayout>