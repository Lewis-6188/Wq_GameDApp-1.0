<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimarydHse"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/mW"
    android:paddingTop="@dimen/mW">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryBS"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/mTen"
        android:paddingBottom="@dimen/mW"
        android:paddingTop="@dimen/mW">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center">

                <ImageView
                    android:id="@+id/grenplicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/youxi_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/mTen">

                    <TextView
                        android:id="@+id/grenplname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="测试游戏"
                        android:textColor="@color/colorPrimaryHS"
                        android:textSize="@dimen/homeoneitemUserTextSize"
                        android:textStyle="bold" />

                    <com.game.wanq.uu.view.whget.RatingBarView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/grplbarview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mW"
                        app:starCount="5"
                        app:starDistance="2dp"
                        app:starEmpty="@mipmap/star1"
                        app:starFill="@mipmap/star2"
                        app:starSize="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/grenpltext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mTen"
            android:layout_marginTop="@dimen/mTen"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:text="评论"
            android:textSize="@dimen/homeoneitemUserTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:background="@color/colorPrimaryBS"
        android:gravity="center_vertical|bottom"
        android:paddingBottom="@dimen/mW"
        android:paddingTop="@dimen/mW">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/mW">

            <TextView
                android:id="@+id/grentitmeOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="15分钟前"
                android:textColor="@color/colorPrimaryTXTHse"
                android:textSize="@dimen/hobanTextSize" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zan" />

                <TextView
                    android:id="@+id/grenzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mW"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="100"
                    android:textColor="@color/colorPrimaryTXTHse"
                    android:textSize="@dimen/hobanTextSize" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
